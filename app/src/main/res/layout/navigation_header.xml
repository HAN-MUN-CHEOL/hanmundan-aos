<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_navigation_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/eulyoo1945_regular"
        android:textColor="@color/hmd_dark_green"
        android:textSize="18sp"
        tools:text = "민주 님,"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_navigation_navi" />

    <ImageView
        android:id="@+id/iv_navigation_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_navigation_header_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/eulyoo1945_regular"
        android:text="@string/menu_header_greeting"
        android:textColor="@color/hmd_dark_green"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_navigation_header_name" />

    <View
        android:id="@+id/view_navigation_header_line"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="@color/hmd_green"
        app:layout_constraintStart_toStartOf="@id/tv_navigation_header_greeting"
        app:layout_constraintTop_toBottomOf="@+id/tv_navigation_header_greeting" />
</androidx.constraintlayout.widget.ConstraintLayout>